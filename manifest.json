{
    "manifest_version": 2,
    "description": "Opens a new Gmail compose window",
    
    "name":"New Gmail Window",
    "icons": {
        "48": "img48.png",
        "16": "img16.png" },
        
    "browser_action": {
        "default_icon": {
            "19":"img48.png"
        },
        "default_title":"New Gmail Compose"
    },
    
    "background": {
        "scripts":["background.js"] },
    
    "permissions":[ "tabs", "contextMenus" ],
    "version": "1.0"
}